@model WikiRh.Models.WikiRh_File

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier</h1>

<hr />
<div class="row">
    <div class="col-md-2" ></div>
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_file" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label class="control-label">Question</label>
                <select asp-for="Id_quest" class="form-control" asp-items="ViewBag.Id_quest"></select>
                <span asp-validation-for="Id_quest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retourner à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
